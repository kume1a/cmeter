<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kumela.cmeter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".common.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.screens.activity.ActivityHomeActivity" />

        <activity android:name=".ui.screens.water.WaterHomeActivity" />

        <activity android:name=".ui.screens.nutrition.home.NutritionHomeActivity" />
        <activity android:name=".ui.screens.nutrition.food_details.FoodDetailsActivity" />
        <activity android:name=".ui.screens.nutrition.add_food.AddFoodActivity" />
        <activity
            android:name=".ui.screens.nutrition.search.SearchActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.Search">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity
            android:name=".ui.screens.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>