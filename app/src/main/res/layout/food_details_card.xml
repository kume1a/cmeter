<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="@dimen/card_radius_small">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calories"
            android:textAppearance="@style/Header"
            app:layout_constraintBottom_toTopOf="@+id/tv_food_details_card_carbs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_carbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/food_details_card_header_space"
            android:text="@string/carbs"
            android:textAppearance="@style/Header"
            app:layout_constraintBottom_toTopOf="@+id/tv_food_details_card_carbs_dietary_fiber"
            app:layout_constraintStart_toStartOf="@id/tv_food_details_card_calories"
            app:layout_constraintTop_toBottomOf="@+id/tv_food_details_card_calories" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_carbs_dietary_fiber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/food_details_card_sub_header_to_header_margin"
            android:text="@string/details_card_carbs_dietary_fiber"
            android:textAppearance="@style/Header.Small"
            app:layout_constraintBottom_toTopOf="@+id/tv_food_details_card_carbs_sugars"
            app:layout_constraintStart_toStartOf="@id/tv_food_details_card_calories"
            app:layout_constraintTop_toBottomOf="@+id/tv_food_details_card_carbs" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_carbs_sugars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_card_carbs_sugars"
            android:textAppearance="@style/Header.Small"
            app:layout_constraintBottom_toTopOf="@+id/tv_food_details_card_fats"
            app:layout_constraintStart_toStartOf="@id/tv_food_details_card_calories"
            app:layout_constraintTop_toBottomOf="@+id/tv_food_details_card_carbs_dietary_fiber" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_fats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/food_details_card_header_space"
            android:text="@string/fats"
            android:textAppearance="@style/Header"
            app:layout_constraintBottom_toTopOf="@+id/tv_food_details_card_fats_saturated"
            app:layout_constraintStart_toStartOf="@id/tv_food_details_card_calories"
            app:layout_constraintTop_toBottomOf="@+id/tv_food_details_card_carbs_sugars" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_fats_saturated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/food_details_card_sub_header_to_header_margin"
            android:text="@string/details_card_fats_saturated"
            android:textAppearance="@style/Header.Small"
            app:layout_constraintBottom_toTopOf="@+id/tv_food_details_card_fats_unsaturated"
            app:layout_constraintStart_toStartOf="@id/tv_food_details_card_calories"
            app:layout_constraintTop_toBottomOf="@+id/tv_food_details_card_fats" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_fats_unsaturated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_card_fats_unsaturated"
            android:textAppearance="@style/Header.Small"
            app:layout_constraintBottom_toTopOf="@+id/tv_food_details_card_fats_trans_fat"
            app:layout_constraintStart_toStartOf="@id/tv_food_details_card_calories"
            app:layout_constraintTop_toBottomOf="@+id/tv_food_details_card_fats_saturated" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_fats_trans_fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_card_fats_trans_fat"
            android:textAppearance="@style/Header.Small"
            app:layout_constraintBottom_toTopOf="@+id/tv_food_details_card_protein"
            app:layout_constraintStart_toStartOf="@id/tv_food_details_card_calories"
            app:layout_constraintTop_toBottomOf="@+id/tv_food_details_card_fats_unsaturated" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/food_details_card_header_space"
            android:text="@string/protein"
            android:textAppearance="@style/Header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_food_details_card_calories"
            app:layout_constraintTop_toBottomOf="@+id/tv_food_details_card_fats_trans_fat" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_calories_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Header"
            app:layout_constraintBottom_toBottomOf="@id/tv_food_details_card_calories"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="89 kcal" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_carbs_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Header"
            app:layout_constraintBottom_toBottomOf="@id/tv_food_details_card_carbs"
            app:layout_constraintEnd_toEndOf="@id/tv_food_details_card_calories_amount"
            tools:text="1.1g" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_carbs_dietary_fiber_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Header.Small"
            app:layout_constraintEnd_toEndOf="@id/tv_food_details_card_calories_amount"
            app:layout_constraintBottom_toBottomOf="@id/tv_food_details_card_carbs_dietary_fiber"
            tools:text="0.5g" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_carbs_sugars_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Header.Small"
            app:layout_constraintBottom_toBottomOf="@id/tv_food_details_card_carbs_sugars"
            app:layout_constraintEnd_toEndOf="@id/tv_food_details_card_calories_amount"
            tools:text="5g" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_fats_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Header"
            app:layout_constraintBottom_toBottomOf="@id/tv_food_details_card_fats"
            app:layout_constraintEnd_toEndOf="@id/tv_food_details_card_calories_amount"
            tools:text="0.3g" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_fats_saturated_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Header.Small"
            app:layout_constraintBottom_toBottomOf="@id/tv_food_details_card_fats_saturated"
            app:layout_constraintEnd_toEndOf="@id/tv_food_details_card_calories_amount"
            tools:text="0.01g" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_fats_unsaturated_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Header.Small"
            app:layout_constraintBottom_toBottomOf="@id/tv_food_details_card_fats_unsaturated"
            app:layout_constraintEnd_toEndOf="@id/tv_food_details_card_calories_amount"
            tools:text="0g" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_fats_trans_fat_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Header.Small"
            app:layout_constraintBottom_toBottomOf="@id/tv_food_details_card_fats_trans_fat"
            app:layout_constraintEnd_toEndOf="@id/tv_food_details_card_calories_amount"
            tools:text="0g" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_food_details_card_protein_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Header"
            app:layout_constraintBottom_toBottomOf="@id/tv_food_details_card_protein"
            app:layout_constraintEnd_toEndOf="@id/tv_food_details_card_calories_amount"
            tools:text="2.8g" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_vertical"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_food_details_card_protein" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>