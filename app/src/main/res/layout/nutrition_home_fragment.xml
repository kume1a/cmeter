<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:background="@color/colorPrimary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="64dp"
        tools:background="@color/colorPrimary">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_nutrition_home_calorie_dashboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:translationY="100dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toTopOf="@id/cv_nutrition_home_weight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:layout_constraintWidth_percent=".95"
            tools:alpha="1"
            tools:translationY="0dp"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="32dp">

                <ProgressBar
                    android:id="@+id/pb_nutrition_home_dashboard_calories"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/bgr_determinant_progress"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:max="3500"
                    tools:progress="1750" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_nutrition_home_dashboard_progress_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/pb_nutrition_home_dashboard_calories"
                    app:layout_constraintEnd_toEndOf="@id/pb_nutrition_home_dashboard_calories"
                    app:layout_constraintStart_toStartOf="@id/pb_nutrition_home_dashboard_calories"
                    app:layout_constraintTop_toTopOf="@id/pb_nutrition_home_dashboard_calories"
                    tools:text="50%" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_nutrition_home_dashboard_current_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Header"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/tv_nutrition_home_dashboard_goal_calories"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/pb_nutrition_home_dashboard_calories"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="1750" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/cal"
                    android:textAppearance="@style/SubTitle.Small"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_nutrition_home_dashboard_current_calories"
                    app:layout_constraintStart_toEndOf="@id/tv_nutrition_home_dashboard_current_calories" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_nutrition_home_dashboard_goal_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Header.Small"
                    app:layout_constraintBottom_toBottomOf="@id/pb_nutrition_home_dashboard_calories"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_nutrition_home_dashboard_current_calories"
                    tools:text="Goal 3500" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_nutrition_home_dashboard_carbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carbs"
                    android:textAppearance="@style/Header.Small"
                    app:layout_constraintBottom_toTopOf="@id/pb_nutrition_home_dashboard_carbs"
                    app:layout_constraintStart_toStartOf="@id/pb_nutrition_home_dashboard_carbs"
                    app:layout_constraintTop_toBottomOf="@id/pb_nutrition_home_dashboard_calories" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_nutrition_home_dashboard_progress_carbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/SubTitle.Small"
                    app:layout_constraintBottom_toTopOf="@id/pb_nutrition_home_dashboard_carbs"
                    app:layout_constraintStart_toStartOf="@id/pb_nutrition_home_dashboard_carbs"
                    app:layout_constraintTop_toBottomOf="@id/tv_nutrition_home_dashboard_carbs"
                    tools:text="100g/250g" />

                <ProgressBar
                    android:id="@+id/pb_nutrition_home_dashboard_carbs"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/pb_height_calorie_dashboard"
                    android:layout_marginTop="4dp"
                    android:progressDrawable="@drawable/bgr_progress_carbs"
                    app:layout_constraintEnd_toStartOf="@id/pb_nutrition_home_dashboard_fats"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_nutrition_home_dashboard_progress_carbs"
                    app:layout_constraintWidth_percent=".28"
                    tools:max="250"
                    tools:progress="100" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_nutrition_home_dashboard_fats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fats"
                    android:textAppearance="@style/Header.Small"
                    app:layout_constraintBottom_toTopOf="@id/pb_nutrition_home_dashboard_fats"
                    app:layout_constraintStart_toStartOf="@id/pb_nutrition_home_dashboard_fats"
                    app:layout_constraintTop_toTopOf="@id/tv_nutrition_home_dashboard_fats" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_nutrition_home_dashboard_progress_fats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/SubTitle.Small"
                    app:layout_constraintBottom_toTopOf="@id/pb_nutrition_home_dashboard_fats"
                    app:layout_constraintStart_toStartOf="@id/pb_nutrition_home_dashboard_fats"
                    app:layout_constraintTop_toBottomOf="@id/tv_nutrition_home_dashboard_fats"
                    tools:text="100g/250g" />

                <ProgressBar
                    android:id="@+id/pb_nutrition_home_dashboard_fats"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/pb_height_calorie_dashboard"
                    android:layout_marginTop="4dp"
                    android:progressDrawable="@drawable/bgr_progress_fats"
                    app:layout_constraintBottom_toBottomOf="@id/pb_nutrition_home_dashboard_carbs"
                    app:layout_constraintEnd_toStartOf="@id/pb_nutrition_home_dashboard_protein"
                    app:layout_constraintStart_toEndOf="@id/pb_nutrition_home_dashboard_carbs"
                    app:layout_constraintTop_toBottomOf="@id/tv_nutrition_home_dashboard_progress_fats"
                    app:layout_constraintWidth_percent=".28"
                    tools:max="60"
                    tools:progress="40" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_nutrition_home_dashboard_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/proteins"
                    android:textAppearance="@style/Header.Small"
                    app:layout_constraintBottom_toTopOf="@id/pb_nutrition_home_dashboard_protein"
                    app:layout_constraintStart_toStartOf="@id/pb_nutrition_home_dashboard_protein"
                    app:layout_constraintTop_toTopOf="@id/tv_nutrition_home_dashboard_protein" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_nutrition_home_dashboard_progress_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/SubTitle.Small"
                    app:layout_constraintBottom_toTopOf="@id/pb_nutrition_home_dashboard_protein"
                    app:layout_constraintStart_toStartOf="@id/pb_nutrition_home_dashboard_protein"
                    app:layout_constraintTop_toBottomOf="@id/tv_nutrition_home_dashboard_protein"
                    tools:text="100g/250g" />

                <ProgressBar
                    android:id="@+id/pb_nutrition_home_dashboard_protein"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/pb_height_calorie_dashboard"
                    android:layout_marginTop="4dp"
                    android:progressDrawable="@drawable/bgr_progress_protein"
                    app:layout_constraintBottom_toBottomOf="@id/pb_nutrition_home_dashboard_carbs"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pb_nutrition_home_dashboard_fats"
                    app:layout_constraintTop_toBottomOf="@id/tv_nutrition_home_dashboard_progress_protein"
                    app:layout_constraintWidth_percent=".28"
                    tools:max="100"
                    tools:progress="50" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_nutrition_home_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:alpha="0"
            android:translationY="100dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toTopOf="@id/cv_nutrition_home_breakfast"
            app:layout_constraintEnd_toEndOf="@id/cv_nutrition_home_calorie_dashboard"
            app:layout_constraintStart_toStartOf="@id/cv_nutrition_home_calorie_dashboard"
            app:layout_constraintTop_toBottomOf="@id/cv_nutrition_home_calorie_dashboard"
            tools:alpha="1"
            tools:translationY="0dp"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_nutrition_home_weight_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/header_weight"
                    android:textAppearance="@style/Header"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_nutrition_home_weight_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Header.Small"
                    app:layout_constraintBottom_toBottomOf="@id/tv_nutrition_home_weight_header"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Goal: 68kg" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_nutrition_home_weight_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_nutrition_home_weight_current_weight"
                    app:layout_constraintEnd_toStartOf="@id/tv_nutrition_home_weight_current_weight"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_nutrition_home_weight_current_weight"
                    app:srcCompat="@drawable/ic_minus_round" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_nutrition_home_weight_current_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="12dp"
                    android:textAppearance="@style/Header"
                    app:layout_constraintEnd_toStartOf="@id/btn_nutrition_home_weight_add"
                    app:layout_constraintStart_toEndOf="@id/btn_nutrition_home_weight_minus"
                    app:layout_constraintTop_toBottomOf="@id/tv_nutrition_home_weight_header"
                    tools:text="64 kg" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_nutrition_home_weight_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_nutrition_home_weight_current_weight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_nutrition_home_weight_current_weight"
                    app:layout_constraintTop_toTopOf="@id/tv_nutrition_home_weight_current_weight"
                    app:srcCompat="@drawable/ic_add_round" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <include
            android:id="@+id/cv_nutrition_home_breakfast"
            layout="@layout/nutrition_home_meal_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toTopOf="@id/cv_nutrition_home_dinner"
            app:layout_constraintEnd_toEndOf="@id/cv_nutrition_home_calorie_dashboard"
            app:layout_constraintStart_toStartOf="@id/cv_nutrition_home_calorie_dashboard"
            app:layout_constraintTop_toBottomOf="@id/cv_nutrition_home_weight" />

        <include
            android:id="@+id/cv_nutrition_home_dinner"
            layout="@layout/nutrition_home_meal_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@id/cv_nutrition_home_supper"
            app:layout_constraintEnd_toEndOf="@id/cv_nutrition_home_calorie_dashboard"
            app:layout_constraintStart_toStartOf="@id/cv_nutrition_home_calorie_dashboard"
            app:layout_constraintTop_toBottomOf="@id/cv_nutrition_home_breakfast" />

        <include
            android:id="@+id/cv_nutrition_home_supper"
            layout="@layout/nutrition_home_meal_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@id/cv_nutrition_home_snacks"
            app:layout_constraintEnd_toEndOf="@id/cv_nutrition_home_calorie_dashboard"
            app:layout_constraintStart_toStartOf="@id/cv_nutrition_home_calorie_dashboard"
            app:layout_constraintTop_toBottomOf="@id/cv_nutrition_home_dinner" />

        <include
            android:id="@+id/cv_nutrition_home_snacks"
            layout="@layout/nutrition_home_meal_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/cv_nutrition_home_calorie_dashboard"
            app:layout_constraintStart_toStartOf="@id/cv_nutrition_home_calorie_dashboard"
            app:layout_constraintTop_toBottomOf="@id/cv_nutrition_home_supper" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/loading_nutrition_home"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:elevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/anim_loading" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/loading_nutrition_home_exit"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:elevation="12dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/anim_loading_out" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>