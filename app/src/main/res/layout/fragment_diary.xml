<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_diary"
    android:background="@color/colorPrimary"
    tools:context=".ui.fragments.diary.DiaryFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_snacks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginEnd="16dp"
        android:alpha="0"
        android:translationY="100dp"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/fab_supper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_avatar_placeholder"
        app:tint="@android:color/white"
        tools:alpha="1"
        tools:translationY="0dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_supper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:alpha="0"
        android:translationY="100dp"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/fab_dinner"
        app:layout_constraintEnd_toEndOf="@+id/fab_snacks"
        app:layout_constraintStart_toStartOf="@+id/fab_snacks"
        app:layout_constraintTop_toBottomOf="@+id/fab_snacks"
        app:srcCompat="@drawable/ic_avatar_placeholder"
        app:tint="@android:color/white"
        tools:alpha="1"
        tools:translationY="0dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:alpha="0"
        android:translationY="100dp"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/fab_breakfast"
        app:layout_constraintEnd_toEndOf="@+id/fab_supper"
        app:layout_constraintStart_toStartOf="@+id/fab_supper"
        app:layout_constraintTop_toBottomOf="@+id/fab_supper"
        app:srcCompat="@drawable/ic_avatar_placeholder"
        app:tint="@android:color/white"
        tools:alpha="1"
        tools:translationY="0dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_breakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:alpha="0"
        android:translationY="100dp"
        app:backgroundTint="@color/colorPrimaryDark"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/fab_main"
        app:layout_constraintEnd_toEndOf="@+id/fab_dinner"
        app:layout_constraintStart_toStartOf="@+id/fab_dinner"
        app:layout_constraintTop_toBottomOf="@+id/fab_dinner"
        app:srcCompat="@drawable/ic_avatar_placeholder"
        app:tint="@android:color/white"
        tools:alpha="1"
        tools:translationY="0dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@color/colorAccentSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fab_breakfast"
        app:layout_constraintStart_toStartOf="@+id/fab_breakfast"
        app:layout_constraintTop_toBottomOf="@+id/fab_breakfast"
        app:srcCompat="@drawable/ic_add"
        app:tint="@color/colorPrimaryDark" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_diary_breakfast"
        app:layout_constraintBottom_toBottomOf="@id/fab_breakfast"
        app:layout_constraintTop_toTopOf="@id/fab_breakfast"
        android:alpha="0"
        tools:alpha="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/fab_breakfast">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Breakfast" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_diary_dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="@id/fab_dinner"
        app:layout_constraintEnd_toStartOf="@+id/fab_dinner"
        app:layout_constraintBottom_toBottomOf="@id/fab_dinner"
        android:alpha="0"
        android:layout_marginEnd="8dp"
        tools:alpha="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Dinner" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_diary_supper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="8dp"
        android:alpha="0"
        tools:alpha="1"
        app:layout_constraintTop_toTopOf="@id/fab_supper"
        app:layout_constraintBottom_toBottomOf="@id/fab_supper"
        app:layout_constraintEnd_toStartOf="@+id/fab_supper"
        android:layout_marginEnd="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Supper" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_diary_snacks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@+id/fab_snacks"
        app:layout_constraintBottom_toBottomOf="@id/fab_snacks"
        app:layout_constraintTop_toTopOf="@id/fab_snacks"
        android:layout_marginEnd="8dp"
        android:alpha="0"
        tools:alpha="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Snacks" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>