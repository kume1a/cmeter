<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/colorWhite</item>

        <item name="android:windowAnimationStyle">@style/CustomActivityTransition</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="CustomActivityTransition" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>


    <style name="Header" parent="@style/TextAppearance.MaterialComponents.Headline5" />

    <style name="Header.Medium" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Header.Small" parent="@style/TextAppearance.MaterialComponents.Subtitle1" />

    <style name="SubTitle" parent="@style/TextAppearance.MaterialComponents.Subtitle2" />

    <style name="SubTitle.Small" parent="@style/TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Tabs" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIconTint">@color/colorAccent</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabTextColor">@color/colorWhite</item>
        <item name="elevation">12dp</item>
    </style>

    <style name="CTL_TextCollapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Picker">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="layout">@layout/toolbar_search_view</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextViewStyle</item>
        <item name="android:maxWidth">9999dp</item>
        <item name="defaultQueryHint">@string/add_food_search_hint</item>
        <item name="closeIcon">@drawable/ic_close</item>

        <item name="searchViewStyle">@null</item>
    </style>

    <style name="AutoCompleteTextViewStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupElevation">0dp</item>
    </style>
</resources>